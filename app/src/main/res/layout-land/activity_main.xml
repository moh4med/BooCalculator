<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/inputtv"
        android:layout_height="100dp"
        android:textSize="20sp"
        tools:text="sdfsdfsdfsdffsdf"
        />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/outputtv"
        android:layout_height="50dp"
        android:textSize="20sp"
        tools:text="sdfsdfsdfsdffsdf"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <TableLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <TableRow
                android:layout_height="0px"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonleftparantext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext"
                   />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonrightparantext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonrandom"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonlog2text"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonlog10text"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext" />
            </TableRow>
            <TableRow
                android:layout_height="0px"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonsquaretext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttoncubetext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttoninversetext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttongenpowertext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonlntext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext"
                    />
            </TableRow> <TableRow
                android:layout_height="0px"
                android:layout_weight="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonsqrttext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttongenroottext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonfactorialtext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonbinomialtext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext"
                    />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonevaltext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext"
                    />
            </TableRow>
            <TableRow
                android:layout_height="0px"
                android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/buttonDEGtext"
                android:onClick="opClick"
                android:background="@color/coloroperationbackground"
                android:textColor="@color/coloroperationtext"
                />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonsintext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext"
                   />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttoncostext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttontantext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext" />

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/buttonPitext"
                    android:onClick="opClick"
                    android:background="@color/coloroperationbackground"
                    android:textColor="@color/coloroperationtext"
                    />
            </TableRow>

        </TableLayout>

        <include
            layout="@layout/basicop"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="5"/>

    </LinearLayout>

</LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/historyrecycleview"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:choiceMode="singleChoice"
        android:divider="@color/colorseparator"
        android:dividerHeight="10dp"
        android:background="#fff">
    </android.support.v7.widget.RecyclerView>
</android.support.v4.widget.DrawerLayout>